@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-8">
        <h2>@ViewData["Title"]</h2>
        <form method="POST" action="validate" id="movieForm">
            <div class="col-12 d-inline-block p-0 align-text-top my-2">
                <label for="FirstName" class="d-inline-block col-3 p-0 text-right">First Name:</label>
                <input type="text" name="FirstName" class="form-control d-inline-block col-8 m-auto" placeholder="Enter First Name" aria-label="Enter First Name">
            </div>
            <div class="col-12 d-inline-block p-0 align-text-top my-2">
                <label for="LastName" class="d-inline-block col-3 p-0 text-right">Last Name:</label>
                <input type="text" name="LastName" class="form-control d-inline-block col-8 m-auto" placeholder="Enter Last Name" aria-label="Enter Last Name">
            </div>
            <div class="col-12 d-inline-block p-0 align-text-top my-2">
                <label for="Age" class="d-inline-block col-3 p-0 text-right">Age:</label>
                <input type="number" name="Age" class="form-control d-inline-block col-8 m-auto" placeholder="Enter Age" aria-label="Enter Age">
            </div>
            <div class="col-12 d-inline-block p-0 align-text-top my-2">
                <label for="Email" class="d-inline-block col-3 p-0 text-right">Email:</label>
                <input type="email" name="Email" class="form-control d-inline-block col-8 m-auto" placeholder="Enter Email" aria-label="Enter Email">
            </div>
            <div class="col-12 d-inline-block p-0 align-text-top my-2">
                <label for="Password" class="d-inline-block col-3 p-0 text-right">Password:</label>
                <input type="password" name="Password" class="form-control d-inline-block col-8 m-auto" placeholder="Enter Password" aria-label="Enter Password">
            </div>
            <div class="col-12 d-inline-block p-0 align-text-top my-2">
                <button class="btn btn-dark" type="submit" form="movieForm">Submit</button>
            </div>
        </form>
    </div>
    <div id="err" class="col-4 mt-5">
        @{
            if(ViewBag.hasError == true)
            {
                foreach(var error in ViewBag.errors)
                {
                    //If there are any errors for a field...
                    if(@error.Errors.Count > 0)
                    {
                        // We show the first error for that field
                        <p>@error.Errors[0].ErrorMessage</p>
                    }
                }
            }
        }
    </div>
</div>